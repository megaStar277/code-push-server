{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2020",
    "outDir": "bin",
    "lib": ["es5", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": ["src/**/*.*"]
}
