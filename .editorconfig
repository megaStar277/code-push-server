# editorconfig.org

root = true

[**]
indent_size = 4
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[**.html]
indent_size = 2

[**.jade]
indent_size = 2

[**.json]
indent_size = 2

[**.scss]
indent_size = 2
insert_final_newline = true

[**.css]
indent_size = 2
insert_final_newline = true

[**.md]
trim_trailing_whitespace = false

[**.js]
indent_size = 2
insert_final_newline = true

[**.yml]
indent_size = 2

[Makefile]
indent_style = tab